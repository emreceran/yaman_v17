<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="timesheet_table">
        <div class="row mt8">
            <div class="col-12">
                <table class="table table-sm">
                    <thead>
                        <tr>

                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="lines" t-as="line" t-att-style="'background-color: #F1F1F1;' if line_index % 2 == 0 else ''">
                            <td class="align-middle">
                                <h4 t-field="line.name"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </template>

    <template id="catim_emri_customized_header">
        <div class="header">
            <div class="o_clean_header">
                <div class="row" style="font-family:'Roboto',sans-serif">
                    <div class="col-7">
                        <img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)" alt="Logo"/>
                    </div>
                    <div class="col-5" >
                        <h2>ÇATIM EMRİ</h2>
                    </div>
                </div>
            </div>
        </div>
    </template>



    <template id="catim_emri">
        <t t-call="web.html_container">
            <t t-call="yaman_v17.catim_emri_customized_header"/>

            <t t-foreach="docs" t-as="doc">
                <t t-call="web.internal_layout">

                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="row mt8">
                            <div class="col-lg-12">
                                <hr style="height:2px;border-width:0;color:gray;background-color:gray"></hr>

                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <!--                                            <th colspan="2">ALICI / TO</th>-->
                                            <th colspan="2">ÇATIM EMRİ</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Müşteri : </td>
                                            <td><t t-esc="doc.partner_id.name"/></td>
                                            <td>Sipariş Tarihi :</td>
                                            <td><span t-esc="doc['create_date'].strftime('%d-%m -%Y')"/></td>
                                        </tr>

                                        <tr>
                                            <td>Kapı Modeli :  </td>
                                            <td><t t-esc="doc.kapi_model"/></td>
                                            <td>Yüzey Tipi :  </td>
                                            <td><t t-esc="{'1': 'PVC', '2': 'LAKE', '3': 'MELAMİN', '4': 'LAMİNANT'}[doc.yuzey_tipi]"/></td>
                                        </tr>

                                        <tr>
                                            <td>Seren Tipi :  </td>
                                            <td><t t-esc="{ '1': 'AĞAÇ', '2': 'MDF'}[doc.seren_tipi]"/></td>
                                            <td>Kasa Rengi :  </td>
                                            <td><t t-esc="doc.kasa_rengi.name"/></td>

                                        </tr>

                                        <tr>
                                            <td>Yüzey Rengi :  </td>
                                            <td><t t-esc="doc.yuzey_rengi.name"/></td>
                                            <td>Pervaz Rengi :  </td>
                                            <td><t t-esc="doc.pervaz_rengi.name"/></td>
                                        </tr>

                                        <tr>
                                            <td>Yüzey Kalınlığı :  </td>
                                            <td><t t-esc="doc.yuzey_kalinlik"/>  <span> mm</span> </td>
                                            <td>Kasa Tipi :  </td>
                                            <td><t t-esc="{'1': 'DÜZ','2': 'BOMBE'}[doc.kasa_tipi]"/></td>
                                        </tr>






                                    </tbody>
                                </table>
                                <h2>
                                    <span> <t t-out="doc.name"/> Projesi için Çatım Emirleri :
                                    </span>
                                </h2>
                            </div>
                        </div>
                        <br/>
                        <h2> Çatım Emirleri</h2>
                        <br/>
                        <h4>
                            Plastik Emirler :
                        </h4>
                        <t t-set="lines" t-value="docs._plastik_catim_emirleri_getir()"/>
                        <t t-call="yaman_v17.timesheet_table"/>
                        <br/>
                        <h4>
                            MDF Emirler :
                        </h4>
                        <t t-set="lines" t-value="docs._mdf_catim_emirleri_getir()"/>
                        <t t-call="yaman_v17.timesheet_table"/>
                        <div class="oe_structure"/>
                         <br/>
                        <h2> Kasa Kesim Emirleri</h2>
                        <br/>
                        <h4>
                            Plastik Emirler :
                        </h4>
                        <t t-set="lines" t-value="docs._plastik_kesim_emirleri_getir()"/>
                        <t t-call="yaman_v17.timesheet_table"/>
                        <br/>
                        <h4>
                            MDF Emirler :
                        </h4>
                        <t t-set="lines" t-value="docs._mdf_kesim_emirleri_getir()"/>
                        <t t-call="yaman_v17.timesheet_table"/>

                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </t>
    </template>


    <record id="catim_emri_paperformat" model="report.paperformat">
        <field name="name">Customized Paper Format</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">210</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">30</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">22</field>
        <field name="dpi">90</field>
    </record>





    <record id="catim_emri_report" model="ir.actions.report">
        <field name="name">Çatım Emri</field>
        <field name="model">project.project</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">yaman_v17.catim_emri</field>
        <field name="report_file">catim_emri</field>
        <field name="binding_model_id" ref="model_project_project"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="yaman_v17.catim_emri_paperformat"/>
    </record>


</odoo>
